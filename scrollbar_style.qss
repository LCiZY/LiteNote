QScrollBar::add-page:vertical {background-color: transparent; }
QScrollBar::sub-page:vertical {background-color: transparent; }
QScrollBar::sub-line:vertical {subcontrol-origin: margin; border: 0px solid rgb(240,241,239); height:0px}
QScrollBar::add-line:vertical {subcontrol-origin: margin; border: 0px solid rgb(240,241,239); height:0px}
